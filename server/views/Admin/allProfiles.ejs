<% include ../partials/header %>
<% include ../partials/navbar %>
<div class="container page-content-container">
    <% include ../user/panel %>
    <h2 class="text-light"><%= title.toUpperCase() %></h2>
</div>
<div class="container projects-grid bg-dark">
    <% include ../loader/transLoad %>
    <div class="row projects-row">
        <% for(var i in users){ %>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-6">
                <a class="text-light" href="/profile/<%= users[i].id %>/cv"" draggable="false">
                    <% if(users[i].avatar) { %>
                        <img src="<%= users[i].avatar %>" alt="<%= users[i].username %>" class="card-img cv-profile-avatar-grid">
                        <% } else { %>
                            <img src="/images/default-avatar.png" alt="<%= users[i].username %>" class="card-img cv-profile-avatar-grid">
                            <% } %>
                                </a>
                                <div class="card-footer">
                                    <form action="/user/<%= users[i].id %>?_method=DELETE" method="POST">
                                        <input type="hidden" name="_csrf" value="<%= csrf %>">
                                        <button type="submit" class="btn del-btn btn-danger btn-sm">Delete This Profile</button>
                                    </form>
                                </div> 
                            </div>
                            <%}%>
                        </div>
                    </div>
                </div>
                <% include ../partials/footer %>