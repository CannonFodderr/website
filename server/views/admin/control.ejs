<% include ../partials/header %>
<% include ../loader/load %>
<div class="container-fluid">
    <h1>Admin Panel</h1>
    <p>Welcome
        <% if(user.firstName){ %>
            <%= user.firstName %>
        <%} else { %>
            <%= user.username %>
        <% } %>
    </p>
    <a href="/admin/<%= user.id %>/edit" class="btn btn-secondary">Edit profile</a>
    <a href="/logout" class="btn btn-secondary">Logout</a>
    <hr>
    <h5><strong>PROJECTS:</strong></h5>
    <a class="btn btn-info" href="/admin/projects/new"><i class="fas fa-plus"></i>Add new</a>
    <div class="row">
    <% projects.forEach((project)=>{ %>
        <div class="col col-xl-3 col-lg-4 col-md-6 col-sm-12 col-s-12">
            <div class="card">
                <a href="/admin/projects/<%=project.id%>/edit">
                    <img class="card-img-top project-grid-img" src="<%= project.img %>" alt="Card image cap">
                </a>
                <div class="card-body bg-dark text-light">
                    <h5 class="card-title"><%= project.title %></h5>
                    <p class="card-text project-card-text"><%= project.description %></p>
                    <hr>
                        <a href="/admin/projects/<%=project.id%>/edit" class="btn btn-info"><i class="fas fa-edit"></i>Edit</a>
                </div>
            </div> 
        </div>
    <% }) %>
    </div>
</div>



<% include ../partials/footer %>