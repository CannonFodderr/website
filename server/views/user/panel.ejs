<div class="user-panel">
    <h2 class="user-title text-dark bg-light"><a class="title-link" href="/user">User Panel</a></h2>
    <div class="text-light">Welcome
        <% if(loggedUser.firstName){ %>
            <%= loggedUser.firstName %>
            <%} else { %>
                <%= loggedUser.username %>
                <% } %>
            </div>
                <br />
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="loggedUserDrop" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Menu
                    </button>
                    <div class="dropdown-menu bg-dark" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item bg-dark text-light" href="/user/<%= loggedUser.id %>/messages/">Messages</a>
                        <a class="dropdown-item bg-dark text-light" href="/profile/<%= loggedUser.id %>/cv">MY CV</a>
                        <a class="dropdown-item bg-dark text-light" href="/profile/<%= loggedUser.id %>/print">Print</a>
                        <a class="dropdown-item bg-dark text-light" href="/logout">Logout</a>
                    </div>
                </div>
            <div class="user-controls">
                <a class="btn btn-outline-light" href="/user/<%= loggedUser.id %>">Edit profile</a>
                <a class="btn btn-outline-light" href="/user/<%= loggedUser.id %>/projects/">Projects</a>
                <a class="btn btn-outline-light" href="/user/<%= loggedUser.id %>/jobs/">Jobs</a>
            </div>
            <div class="row  controls-row text-light no-gutters bg-light text-dark">
                <div class="col-2">
                    <a class="btn btn-lg btn-link text-dark btn-back" href="#" onclick="history.go(-1)"><i class="fas fa-arrow-left"></i></a>
                </div>
                <div class="col-8 text-center">
                    <% if (messages.success || messages.failure) { %>
                        <% if (messages.success) { %>
                            <h5 class="text-center text-success card-header typer">
                                <div class="typewriter">
                                    <%= messages.success %>
                                </div>
                            </h5>
                            <% } %>
                            <% if (messages.failure) { %>
                                <h5 class="card-header typer">
                                    <div class="text-center typewriter text-danger">
                                        <%= messages.failure %>
                                    </div>
                                </h5>
                                <% } %>
                                <% } else { %>
                                    <h5 class="card-header typer">
                                        <div class="text-center typewriter">
                                            <%= title.toUpperCase() %>
                                        </div>
                                    </h5>
                                    <% } %>
                                </div>
                            </div>