<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text text-light bg-dark" id="basic-addon1">Username:</span>
    </div>
    <input name="username" type="text" class="form-control" placeholder="Username" aria-label="Username"
    aria-describedby="basic-addon1" value="<%= user.username %>">
</div>
<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text text-light bg-dark" id="basic-addon1">First Name:</span>
    </div>
    <input name="firstName" type="text" class="form-control" placeholder="First Name" aria-label="lastName"
    aria-describedby="basic-addon1" value="<%= user.firstName %>">
</div>
<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text text-light bg-dark" id="basic-addon1">Last Name:</span>
    </div>
    <input name="lastName" type="text" class="form-control" placeholder="Last Name" aria-label="lastName"
    aria-describedby="basic-addon1" value="<%= user.lastName %>">
</div>
<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text text-light bg-dark" id="basic-addon1">E-Mail:</span>
    </div>
    <input name="email" type="email" class="form-control" placeholder="" aria-label="email" aria-describedby="basic-addon1"
    value="<%= user.email %>">
</div>

<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text text-light bg-dark" id="basic-addon1">Phone:</span>
    </div>
    <input name="phone" type="tel" class="form-control" placeholder="" aria-label="tel" aria-describedby="basic-addon1"
    value="<%= user.phone %>">
</div>
<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text text-light bg-dark" id="basic-addon1">Birthday:</span>
    </div>
    <input name="birthday" type="date" class="form-control" placeholder="<%=user.birthday %>" aria-label="date"
    aria-describedby="basic-addon1" value="<%= user.birthday %>" min="1900-01-01">
</div>
<div class="input-group mb-3">
    <div class="container files-container">
        <div class="row">
            <div class="col image-upload-inputs-col">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="btn btn-dark" id="basic-addon1">Profile Image:</span>
                    </div>
                    <input name="avatar" type="url" class="form-control" placeholder="<%=user.avatar %>" aria-label="date"
                    aria-describedby="basic-addon1" value="<%= user.avatar %>">
                    <input class="btn btn-outline-secondary fileInput" id="avatarFile" type="file" name="avatar" accept="image"/>
                    <label class="btn btn-outline-info btn-block grit" for="avatarFile"><strong>UPLOAD</strong> - JPG/PNG only, max size: 500Kb</label>
                </div>
            </div>
            <div class="col image-upload-img-col">
                <% if(user.avatar){ %>
                    <img class="cv-profile-avatar" src="<%= user.avatar %>" alt="<%=user.username%> profile picture" draggable="false">
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <div class="container files-container">
            <div class="row">
                <div class="col image-upload-inputs-col">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="btn btn-dark text-light bg-dark" id="basic-addon1">Cover Image:</span>
                        </div>
                        <input name="cover_image" type="url" class="form-control" placeholder="<%=user.cover_image %>" aria-label="date"
                        aria-describedby="basic-addon1" value="<%= user.cover_image %>">
                        <input id="coverFile" class="btn btn-outline-secondary fileInput" type="file" name="cover" accept="image"/>
                        <label class="btn btn-outline-info btn-block grit" for="coverFile"><strong>UPLOAD</strong> - JPG/PNG only, max size: 500Kb</label>
                    </div>
                </div>
                <% if(user.cover_image){ %>
                    <div class="col image-upload-img-col">
                        <img class="cv-user-cover" src="<%= user.cover_image %>" alt="<%=user.username%> profile picture" draggable="false">
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
        <h5 class="text-dark">Bio:</h5>
        <div class="form-group">
            <textarea name="bio" class="form-control" id="exampleFormControlTextarea1" rows="10" cols="50" placeholder="About me"><%= bio %></textarea>
        </div>
        