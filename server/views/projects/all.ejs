<% include ../partials/header %>
<div class="container">
    <h2 class="text-light"><%= title.toUpperCase() %></h2>
    <form id="projects-filter-form" action="/projects" method="GET">
        <div class="form-row no-gutters">
            <div class="col-lg-1 col-md-2 col-sm-1">
                <a class="btn btn-outline-light btn-back" href="/"><i class="fas fa-arrow-left back-icon"></i></a>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6">
                <div class="input-group">
                    <div class="input-group-append">
                        <span class="input-group-text bg-dark text-light" id="basic-addon2">Category</span>
                    </div>
                    <select id="category-select" name="category" id="category-select" class="custom-select" onchange=this.form.submit()>
                        <option value=""></option>
                        <option value="">All</option>
                        <option value="Web Development">Web Development</option>
                        <option value="E-Commerce">E-Commerce</option>
                        <option value="Sound Design">Sound Design</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-5"></div>
        </div>
    </form>
</div>
<div class="fluid-container projects-grid bg-dark">
    <div class="row projects-row">
        <% include ../loader/transLoad %>
        <% for(var i in projects){ %>
            <div class="col-xs-12 col-lg-3 col-md-6 col-sm-12 project-col ">        
                <div class="card project-card bg-light">
                    <img class="card-img project-grid-img " src="<%= projects[i].img %>" alt="<%=projects[i].title %>" draggable="false">
                    <div class="card-img-overlay text-light">
                        <h5 class="card-title project-card-title bg-dark"><%= projects[i].title.toUpperCase() %></h5>
                        <!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> -->
                        <p class="card-text project-card-text bg-dark text-light"><%= projects[i].category %></p>
                    </div>
                </div>
            </div>
            <%}%>
        </div>
</div>
    <script src="scripts/transloader.js"></script>
    <% include ../partials/footer %>