<% include ../partials/header %>
<% include ../loader/transLoad %>
<% include ../partials/navbar %>
<div class="container page-content-container">
    <% include ../admin/panel %>
    <a class="btn bg-dark text-light" href="/admin/projects/new">New Project</a>
    <a class="btn bg-dark text-light" href="/admin/icons/new">New Icon</a>
    <a class="btn bg-dark text-light" href="/admin/tech/new">New Tech</a>
    <div class="container">
            <h5 class="admin-projects-title bg-light">
                <strong>All Projects:</strong>
            </h5>
            <div class="row projects-row">
                <% projects.forEach((project)=>{ %>
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 col-xs-12 project-col">
                        <div class="card project-card">
                            <a href="/admin/projects/<%=project.id%>/edit">
                                <img class="card-img-top project-grid-img" src="<%= project.img %>" alt="Card image cap">
                            </a>
                            <div class="card-body project-card-body text-light">
                                <h5 class="card-title"><%= project.title.toUpperCase() %></h5>
                                <h6>Category: <%= project.category %></h6>
                                <p class="card-text project-card-text"><%= project.description %></p>
                            </div>
                            <div class="card-body-footer">
                                <a href="/admin/projects/<%=project.id%>/edit" class="btn bg-dark text-light"><i class="fas fa-edit"></i>Edit</a>
                            </div>
                        </div> 
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
</div>
<script src="/scripts/transloader.js"></script>
<% include ../partials/footer %>